<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Option">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sun"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnCalBMI"
                android:layout_width="300dp"
                android:layout_height="150dp"

                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:backgroundTint="#B3887B"
                android:fontFamily="sans-serif-black"
                android:text="Calculate  BMI"
                android:textSize="30sp"
                app:cornerRadius="30dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnCalCalories"
                android:layout_width="300dp"
                android:layout_height="150dp"

                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:backgroundTint="#869576"
                android:fontFamily="sans-serif-black"
                android:text="Calculate Calories"
                android:textSize="30sp"
                app:cornerRadius="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnCalCaloriesBurn"
                android:layout_width="300dp"
                android:layout_height="150dp"

                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:backgroundTint="#747FBC"
                android:fontFamily="sans-serif-black"
                android:text="Calculate Calories Burnt"
                android:textSize="30sp"
                app:cornerRadius="30dp"
                app:iconPadding="8dp" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>